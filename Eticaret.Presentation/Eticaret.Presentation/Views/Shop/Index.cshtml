@model ShopViewModel 
 <div class="product-big-title-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-bit-title text-center">
                        <h2>Shop</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
            @foreach (var item in Model.Products)
            {
                                    <div class="col-md-3 col-sm-6">
                                        <div class="single-shop-product">
                                            <div class="product-upper">
                                                <img src="/product/@item.Image" alt="">
                                            </div>
                                            <h2><a href="/urun/@item.SeoName">@item.Name</a></h2>
                                            <div class="product-carousel-price">
                                                <ins>@item.Price.ToString("C")</ins> <del>@Html.Raw((item.Price - 10).ToString("C"))</del>
                                            </div>  

                                            <div class="product-option-shop">
                                                <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="/canvas/shop/?add-to-cart=70">Add to cart</a>
                                            </div>                       
                                        </div>
                                    </div>
            }

            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="product-pagination text-center">
                        <nav>
                          <ul class="pagination">
                            @if (Model.CurrentPage != 1)
                            {
                                      <li>
                                      <a href="/kategori/@Model.CategoryName/@Html.Raw(Model.CurrentPage-1)" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                      </a>
                                    </li>
                            }

                            @for (var i = 0; i < Model.TotalPage; i++)
                            {
                                if (i + 1 == Model.CurrentPage)
                                {
                                                    <li><a href="/kategori/@Model.CategoryName/@Html.Raw(i+1)"><b>@Html.Raw(i+1)</b></a></li>
                                }
                                else
                                {
                                                    <li><a href="/kategori/@Model.CategoryName/@Html.Raw(i+1)">@Html.Raw(i+1)</a></li>  
                                }

                            }


                            @*                 <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>*@
                            @if (Model.CurrentPage != Model.TotalPage)
                            {
                                 <li>
                                  <a href="/kategori/@Model.CategoryName/@Html.Raw(Model.CurrentPage+1)" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                  </a>
                                </li>
                            }

                          </ul>
                        </nav>                        
                    </div>
                </div>
            </div>
        </div>
    </div>