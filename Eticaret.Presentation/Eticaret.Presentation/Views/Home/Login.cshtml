@model LoginModel
@{
    Layout = "_LoginLayout";
}
<div class="container" style="background-color:#f4f4f4;padding:5px;border:solid 1px gray;width:550px;margin-left:auto;margin-right:auto;margin-bottom:25px;margin-top:25px">
  <h2>Login</h2>
  <form asp-controller="Home" asp-action="Login" method="post" target="_self">
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" asp-for="Email" class="form-control" placeholder="Enter email" autocomplete="off">
     <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
      <label for="pwd">Password:</label>
      <input type="password" asp-for="Password" class="form-control" placeholder="Enter password">
      <span asp-validation-for="Password"></span>
    </div>
    <div class="checkbox">
      <label><input type="checkbox"> Remember me</label>
    </div>
    <button type="submit" class="btn btn-default">Enter</button>
  </form>
</div>
